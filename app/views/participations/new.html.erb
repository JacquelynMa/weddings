<h1>Add them to a party!</h1>

<%= form_for(@participation) do |f| %>
  <table>
    <% @parties.each do |party| %>
      <tr>
        <%= f.label :name %><br>
        <%= f.check_box :name %>
      </tr>
    <% end %>
  </table>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
